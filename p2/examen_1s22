import java.util.Scanner;

public class examen_1s22 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Ingrese la cantidad de valores: ");
        int n = scanner.nextInt();

        double[] valores = new double[n];
        for (int i = 0; i < n; i++) {
            System.out.print("Ingrese el valor " + (i + 1) + ": ");
            valores[i] = scanner.nextDouble();
        }

        double suma = 0;
        for (int i = 0; i < n; i++) {
            suma += valores[i];
        }
        double media = suma / n;

        double sumaDiferencias = 0;
        for (int i = 0; i < n; i++) {
            sumaDiferencias += Math.abs(valores[i] - media);
        }
        double desviacionMedia = sumaDiferencias / n;

        System.out.println("La media es: " + media);
        System.out.println("La desviaciÃ³n media es: " + desviacionMedia);
    }
}